{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Title }} on {{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>Reading list - links to interesting articles and resources</description>
    <generator>Hugo</generator>
    <language>{{ site.Language.LanguageCode }}</language>
    {{- if not .Date.IsZero }}
    <lastBuildDate>{{ (index .RegularPages 0).Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{- end }}
    {{- with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}
    {{- range .RegularPages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ with .Params.link }}{{ . }}{{ else }}{{ .Permalink }}{{ end }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      <guid>{{ .Permalink }}</guid>
      <description>{{ with .Params.description }}{{ . | html }}{{ end }}</description>
    </item>
    {{- end }}
  </channel>
</rss>
